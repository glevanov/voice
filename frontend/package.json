{
  "name": "voice-frontend",
  "description": "Voice Assistant Frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint:setup-hooks": "simple-git-hooks",
    "lint:oxlint": "oxlint src --deny-warnings",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --write ."
  },
  "license": "MIT",
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged && pnpm run lint:tsc"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --write",
      "oxlint --fix --deny-warnings"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "lint-staged": "16.2.3",
    "oxlint": "1.18.0",
    "prettier": "3.6.2",
    "prettier-plugin-svelte": "3.4.0",
    "simple-git-hooks": "2.13.1",
    "typescript": "5.9.2",
    "vite": "5.0.0"
  },
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "3.0.0",
    "svelte": "4.2.0"
  }
}
